{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "data_tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "rules": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "required_tags": {"type": "array", "items": {"type": "string"}},
          "decision": {"type": "string", "enum": ["allow", "require_approval", "deny"]}
        },
        "required": ["required_tags", "decision"]
      }
    },
    "masking": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "approval_roles": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["data_tags", "rules"]
}
